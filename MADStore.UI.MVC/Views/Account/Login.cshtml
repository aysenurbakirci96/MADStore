@model MADStore.Model.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="card card-signup" style="width:450px; margin-top:90px;">
    <form class="form" method="post" action="">
        @*<div class="header header-rose text-center" style="background-color: black ;">*@
            <h3 class="card-title text-center">KULLANICI GİRİŞİ</h3>
        @*</div>*@
        <div class="card-content" style="height:300px;">
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">email</i>
                </span>
                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", type = "email", placeholder = "E-mail Adresinizi Giriniz" })

            </div>


            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                </span>
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "password", placeholder = "Şifrenizi Giriniz" })


            </div>
            <div style="margin-left:50px;">
                <input type="submit" name="name" value="GİRİŞ YAP" class="btn btn-danger btn-default" style="background:linear-gradient(60deg, #FF7F00,#F4B281); width:350px; font-size:14px;">
                <br />
                <div style="text-align:center; margin-top:20px; margin-left:-20px;">Hesabın yok mu ? <a href="Register" style="color:#DA5346;">Kayıt Ol</a></div>
            </div>
        </div>
        <div class="footer text-center">

            
        </div>
        </form>
    </div>


