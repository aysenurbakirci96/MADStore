@using MADStore.Model
@model List<Product>

@if (ViewBag.Error != null)
{
    <span>@ViewBag.Error</span>
}
else
{


    foreach (Product item in Model)
    {
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    <span title="@item.Title">@item.Title</span>
                </div>
                <div class="panel panel-body">
                    <div style="width:100%; height:47%;">
                        <img src="@item.PhotoUrl" style="width:100%; height:100%" alt="@item.Title" />
                    </div>
                    <div style="height:25%;">
                        <div class="col-lg-3" style="margin-top:30px;">
                            @item.Price
                        </div>
                        <div class="col-lg-3">

                        </div>
                        <div class="col-lg-3" style="margin-left:-10px; margin-top:5px;">
                            <input type="button" name="name" class="btn btn-warning" onclick="AddToMyCart(@item.ID)" value="Sepete Ekle" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
}

