    <div class="main main-raised col-md-10" style="margin-top : 60px; margin-bottom: 35px; margin-left:130px;">

        <div class="col-md-11" style="padding:40px; padding-left:60px;">
            @RenderBody()
        </div>
    </div>



    <nav id="cd-vertical-nav" style="margin-left:-50px;">
